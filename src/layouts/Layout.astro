---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		/* CSS HEX */
		--maize: #fee440ff;
		--rose: #ed217cff;
		--blue-green: #07a0c3ff;
		--columbia-blue: #c3d2d5ff;
		--eerie-black: #1c1c1cff;
		--white: #ffffffff;

		/* CSS HSL */
		--maize: hsla(52, 99%, 62%, 1);
		--rose: hsla(333, 85%, 53%, 1);
		--blue-green: hsla(191, 93%, 40%, 1);
		--columbia-blue: hsla(190, 18%, 80%, 1);
		--eerie-black: hsla(0, 0%, 11%, 1);

		/* CSS Gradient */
		--gradient-top: linear-gradient(0deg, #fee440ff, #ed217cff, #07a0c3ff, #c3d2d5ff, #1c1c1cff);
		--gradient-right: linear-gradient(90deg, #fee440ff, #ed217cff, #07a0c3ff, #c3d2d5ff, #1c1c1cff);
		--gradient-bottom: linear-gradient(180deg, #fee440ff, #ed217cff, #07a0c3ff, #c3d2d5ff, #1c1c1cff);
		--gradient-left: linear-gradient(270deg, #fee440ff, #ed217cff, #07a0c3ff, #c3d2d5ff, #1c1c1cff);
		--gradient-top-right: linear-gradient(45deg, #fee440ff, #ed217cff, #07a0c3ff, #c3d2d5ff, #1c1c1cff);
		--gradient-bottom-right: linear-gradient(135deg, #fee440ff, #ed217cff, #07a0c3ff, #c3d2d5ff, #1c1c1cff);
		--gradient-top-left: linear-gradient(225deg, #fee440ff, #ed217cff, #07a0c3ff, #c3d2d5ff, #1c1c1cff);
		--gradient-bottom-left: linear-gradient(315deg, #fee440ff, #ed217cff, #07a0c3ff, #c3d2d5ff, #1c1c1cff);
		--gradient-radial: radial-gradient(#fee440ff, #ed217cff, #07a0c3ff, #c3d2d5ff, #1c1c1cff);
	}

	html {
		font-family: 'Bebas Neue', sans-serif;
		font-size: 24px;
		background-color: var(--eerie-black);
		color: var(--white);
	}

	body {
		margin: 0;
	}

	a:visited {
		color: var(--blue-green);
	}

	a:focus,
	a:hover {
		color: var(--rose);
	}

	a {
		color: var(--maize);
		transition: color 0.1s;
	}

	p {
		margin: 0;
	}
</style>
